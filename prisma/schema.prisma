model JobApplication {
  id String @id @default(cuid()) 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  jobTitle String
  companyName String 
  jobUrl String
  location String
  status String
  wishlisted Boolean @default(false)
  company Company @relation(fields: [companyName], references: [name])
}

